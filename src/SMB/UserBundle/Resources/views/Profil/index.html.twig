{# SMB\UserBundle\Resources\views\Profil\index.html.twig #}

{% extends "SMBUserBundle::layout.html.twig" %}

{% block title %}
	Liste des profil - {{ parent() }}
{% endblock %}

{% block body_stock %}
	<div class="block block_profil col-sm-12">
		<div class="col-sm-10">
			<div class="titre_block">
		  		<h5 class="titre">Liste des profils 
		  			<span class="inscription pull-right">
		  				<a href="{{ path('smb_profil_add') }}">Ajouter</a>
		  			</span>
		  		</h5>
			</div>
		   <table class="table table-striped table-borded table-condensed">
		   		<thead>
		   			<tr>
		   				<th>Nom du profil</th>
		   				<th></th>
		   				<th></th>
		   				<th></th>
		   			</tr>
		   		</thead>
		   		<tbody>
		   		{% for profil in listProfils %}
		   			<tr style="font-size:15px">
		   				<td>{{ profil.libelle }}</td>
		   				<td><a class="afficher" href="{{ path('smb_profil_view',{'id':profil.id}) }}"></a></td>
		   				<td><a class="modifier" href="{{ path('smb_profil_edit',{'id':profil.id}) }}"></a></td>
		   				<td><a class="supprimer" href="{{ path('smb_profil_delete',{'id':profil.id}) }}"></a></td>
		   			</tr>
		   			</a>
		   		</tbody>
		   		{% endfor %}
		   </table>
		</div>
		<div class="col-sm-2">
		</div>

	</div>
{% endblock %}