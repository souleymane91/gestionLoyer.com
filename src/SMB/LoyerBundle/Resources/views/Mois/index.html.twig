{# src\SMB\LoyerBundle\Resources\views\Mois\index.html.twig #}


<div class="block block_mois col-sm-12">
    <div class="liste_mois col-sm-10">
        <div class="titre_block">
            <h5 class="titre">Liste des mois</h5>
        </div>
        <table class="table table-striped table-borded table-condensed">
            <thead>
                <tr>
                    <th>Numéro</th>
                    <th>Libellé</th>
                </tr>
            </thead>
            <tbody>
                {% for mois in listMois %}
                    <tr style="font-size:15px">
                        <td>{{ mois.id }}</td>
                        <td>{{ mois.libelle }}</td>                                 
                        <td><input type="checkbox" name="{{mois.id}}"/></td>                                 
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<div class="boutons">
    <ul>
        <li class="ajout_mois"><button class="ajouter">Ajouter</button></li>
        <li class="modification_mois"><button class="modifier">Modifier</button></li>
        <li class="suppression_mois"><button class="supprimer">Supprimer</button></li>
    </ul>
</div>