{# src/SMB/LoyerBundle/Resources/views/Loyer/indexRegistre.html.twig #}

{% extends "SMBLoyerBundle::layout.html.twig" %}

{% block title %}
  Registre - {{ parent() }}
{% endblock %}

{% block smbloyer_body %}

	  	<h3>Liste des registres</h3>

		<div>
		   <table class="table table-striped table-borded table-condensed">
		   		<thead>
		   			<tr>
		   				<th></th>
		   				<th></th>
		   				<th>Annee scolaire</th>
		   				<th>Premier mois</th>
		   				<th>Dernier mois</th>
		   				<th>Mensualité</th>
		   				<th>Caution</th>
		   				<th>Date d'ouverture</th>
		   				<th>Date de fermeture</th>
		   			</tr>
		   		</thead>
		   		<tbody>
		   		{% for registre in listRegistres %}
		   			<tr>
		   				<td><a href="{{ path('smb_loyer_view_registre',{'id':registre.id}) }}">détails</a></td>
		   				<td><a href="{{ path('smb_loyer_edit_registre',{'id':registre.id}) }}">modifier</a></td>
		   				<td>{{ registre.anneeScolaire }}</td>
		   				<td>{{ registre.moisDebut }}</td>
		   				<td>{{ registre.moisFin }}</td>
		   				<td>{{ registre.mensualite }} FCFA</td>
		   				<td>{{ registre.caution }} FCFA</td>
		   				<td>{{ registre.dateDebut|date('Y-m-d') }}</td>
		   				<td>{{ registre.dateFin|date('Y-m-d') }}</td>
		   			</tr>
		   			</a>
		   		</tbody>
		   		{% endfor %}
		   </table>
		</div>

{% endblock %}