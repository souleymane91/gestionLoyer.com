{# src/SMB/LoyerBundle/Resources/views/Loyer/index.html.twig #}

{% extends "SMBLoyerBundle::layout.html.twig" %}

{% block title %}
  Etudiants - {{ parent() }}
{% endblock %}

{% block smbloyer_body %}
	<div class="block block_etudiant col-sm-12">
		<div class="col-sm-10">
			<div class="titre_block">
		  		<h5 class="titre">Liste des étudiants 
		  			<span class="pull-right">
		  				<a style="color:white;text-decoration:none" href="{{ path('smb_etudiant_add') }}">Inscription</a>
		  			</span>
		  		</h5>
			</div>
		   <table class="table table-striped table-borded table-condensed">
		   		<thead>
		   			<tr>
		   				<th>Prénom</th>
		   				<th>Nom</th>
		   				<th>Adresse email</th>
		   				<th>Téléphone</th>
		   				<th>Etat</th>
		   				<th>Afficher</th>
		   				<th>Modifier</th>
		   				<th>supprimer</th>
		   			</tr>
		   		</thead>
		   		<tfoot>
		   			<tr>
		   				<th>Prénom</th>
		   				<th>Nom</th>
		   				<th>Adresse email</th>
		   				<th>Téléphone</th>
		   				<th>Etat</th>
		   				<th>Afficher</th>
		   				<th>Modifier</th>
		   				<th>supprimer</th>
		   			</tr>
		   		</tfoot>
		   		<tbody>
		   		{% for etudiant in listEtudiants %}
		   			<tr style="font-size:15px">
		   				<td>{{ etudiant.prenom }}</td>
		   				<td>{{ etudiant.nom }}</td>
		   				<td>{{ etudiant.email }}</td>
		   				<td>{{ etudiant.telephone }}</td>
		   				<td>codifié</td>
		   				<td>
		   					<a class="afficher" href="{{ path('smb_etudiant_view',{'id':etudiant.id}) }}">
		   					</a>
		   				</td>
		   				<td>
		   					<a class="modifier" href="{{ path('smb_etudiant_edit',{'id':etudiant.id}) }}">
		   					</a>
		   				</td>
		   				<td>
		   					<a class="supprimer" href="{{ path('smb_etudiant_delete',{'id':etudiant.id}) }}">
		   					</a>
		   				</td>
		   			</tr>
		   		{% endfor %}
		   		</tbody>
		   </table>
		</div>

	</div>
{% endblock %}