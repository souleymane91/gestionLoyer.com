{# src\SMB\LoyerBundle\Resources\views\Loyer\addEtudiant.html.twig #}



<div class="well block ajout_etudiant col-sm-6">
    {{ form_start(form, {'atr': {'class': 'form-horizontal'}}) }}

        {{ form_errors(form) }}
        <div class="row">
            <div class="col-sm-10">
                {# personalisation du champ prenom #}
                <div class="row">
                <div class="form-group">
                    {{ form_label(form.prenom, "Prénom: ", {'label_atr': {'class': 'col-sm-3 control-label'}}) }}
                    {{ form_widget(form.prenom, {'atr': {'class': 'col-sm-6 form-control'}}) }}
                    {{ form_errors(form.prenom) }}
                    <div class="erreur erreur_prenom"></div>
                </div>
                </div>

                {# personalisation du champ nom #}
                <div class="row">
                <div class="form-group">
                    {{ form_label(form.nom, "Nom: ", {'label_atr': {'class': 'col-sm-3 control-label'}}) }}
                    {{ form_widget(form.nom, {'atr': {'class': 'col-sm-6 form-control'}}) }}
                    {{ form_errors(form.nom) }}
                    <div class="erreur erreur_nom"></div>
                </div>
                </div>

                {# personalisation du champ email #}
                <div class="row">
                <div class="form-group">
                    {{ form_label(form.email, "Adresse email: " , {'label_atr': {'class': 'col-sm-3 control-label'}}) }}
                    {{ form_widget(form.email, {'atr': {'class': 'col-sm-6 form-control'}}) }}
                    {{ form_errors(form.email) }}
                    <div class="erreur erreur_email"></div>
                </div>
                </div>

                {# personalisation du champ telephone #}
                <div class="row">
                <div class="form-group">
                    {{ form_label(form.telephone, "Téléphone: " , {'label_atr': {'class': 'col-sm-3 control-label'}}) }}
                    {{ form_widget(form.telephone, {'atr': {'class': 'col-sm-6 form-control'}}) }}
                    {{ form_errors(form.telephone) }}
                    <div class="erreur erreur_telephone"></div>
                </div>
                </div>

                {# personalisation du champ caution #}
                {#<div class="row">
                <div class="form-group">
                    {{ form_label(form.caution, "Caution payée: " , {'label_atr': {'class': 'col-sm-3 control-label'}}) }}
                    {{ form_widget(form.caution, {'atr': {'class': 'col-sm-6 form-control'}}) }}
                    {{ form_errors(form.caution) }}
                </div>
                </div>#}

            </div>


        </div>

    {{ form_end(form) }}
</div>
